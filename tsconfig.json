{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build/js/",
        "target": "es5",
        "noEmitOnError": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./src/ECS.ts",
        "./src/game.ts",
        "./src/game_objects.ts",
        "./src/graphics.ts",
        "./src/input.ts",
        "./src/systems.ts",
        "./src/tile.ts"
    ]
}
